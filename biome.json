{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git"
    },
    "files": {
        "ignoreUnknown": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentWidth": 2,
        "lineWidth": 100,
        "indentStyle": "space",
        "formatWithErrors": false
    }
}